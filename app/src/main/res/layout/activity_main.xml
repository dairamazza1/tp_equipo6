<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTendencias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tendencias"
            android:textSize="30sp"
            android:textColor="@color/red"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPeliculasTendencia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/pelicula"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tvTendencias"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvNuevas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevas"
            android:textSize="30sp"
            android:textColor="@color/red"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/rvPeliculasTendencia"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPeliculasNuevas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/pelicula"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tvNuevas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvParaTi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Para ti"
            android:textSize="30sp"
            android:textColor="@color/red"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/rvPeliculasNuevas"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPeliculasParaTi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/pelicula"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tvParaTi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvTerror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terror"
            android:textSize="30sp"
            android:textColor="@color/red"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/rvPeliculasParaTi"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPeliculasTerror"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/pelicula"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tvTerror"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvAccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accion"
            android:textSize="30sp"
            android:textColor="@color/red"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/rvPeliculasTerror"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPeliculasAccion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/pelicula"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tvAccion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
